<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical"
            android:padding="30dp"
            android:layout_margin="20dp"
            android:background="@drawable/baackground"
            android:layout_alignParentLeft="true">



            <TextView
                android:id="@+id/headerTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textStyle="bold"
                android:text="Enter Student Details"
                android:textColor="@color/purple_200"
                android:fontFamily="sans-serif-condensed"
                android:textSize="23dp" />


            <EditText
                android:id="@+id/nameEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:textSize="14sp"
                android:textColorHint="#606060"
                android:inputType="text"
                android:hint=" Student Name" />

            <EditText
                android:id="@+id/phoneedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_baseline_phone_android_24"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:textSize="14sp"
                android:textColorHint="#606060"
                android:inputType="phone"
                android:hint="Mobile" />
            <EditText
                android:id="@+id/addressedt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_baseline_add_business_24"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:textSize="14sp"
                android:textColorHint="#606060"
                android:inputType="text"
                android:hint="Address" />
            <EditText
                android:id="@+id/ettime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_baseline_access_time_24"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:textSize="14sp"
                android:textColorHint="#606060"
                android:inputType="text"
                android:hint="Time" />
            <EditText
                android:id="@+id/tyoe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_baseline_question_answer_24"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:padding="20dp"
                android:textSize="14sp"
                android:textColorHint="#606060"
                android:inputType="text"
                android:hint="Type" />




            <ProgressBar
                android:id="@+id/progress_bar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:visibility="invisible"
                android:layout_height="52dp" />
            <Button
                android:id="@+id/uploadBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_gravity="center"
                android:background="@color/teal_200"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Request"
                />
        </LinearLayout>



    </ScrollView>


</LinearLayout>
