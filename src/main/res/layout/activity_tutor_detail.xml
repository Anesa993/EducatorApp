<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_margin="20dp"
        card_view:cardCornerRadius="12dp"
        card_view:cardElevation="5dp"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="12dp"
                >
                <com.makeramen.roundedimageview.RoundedImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/teacherDetailImageView"
                    android:layout_width="250dp"
                    android:layout_height="180dp"
                    android:src="@drawable/icon"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentTop="true"
                    app:riv_corner_radius="8dip"
                    app:riv_border_width="1dip" />


                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="30dp"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:textStyle="bold"
                            android:textColor="#0f0f0f"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Name:" />
                        <TextView
                            android:id="@+id/nameDetailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:padding="5dp"
                            android:fontFamily="@font/nunito_semibold"
                            android:layout_marginStart="20dp"
                            android:maxLines="1"
                            android:textColor="#0f0f0f"
                            android:text="Name" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:visibility="gone"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:fontFamily="@font/nunito_semibold"
                            android:textStyle="bold"
                            android:textColor="#0f0f0f"
                            android:text="Mobile:" />
                        <TextView
                            android:id="@+id/MobileDetailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:textSize="14dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:textColor="#0f0f0f"
                            android:text="Mobile" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:fontFamily="@font/nunito_semibold"
                            android:textStyle="bold"
                            android:textColor="#0f0f0f"
                            android:text="tuitionType:" />
                        <TextView
                            android:id="@+id/datDetailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:textSize="14dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:textColor="#0f0f0f"
                            android:text="tuitionType" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:fontFamily="@font/nunito_semibold"
                            android:textStyle="bold"
                            android:textColor="#0f0f0f"
                            android:text="Category:" />
                        <TextView
                            android:id="@+id/catDetailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nunito_semibold"
                            android:textSize="14dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:textColor="#0f0f0f"
                            android:text="category" />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:fontFamily="@font/nunito_semibold"
                            android:textStyle="bold"
                            android:textColor="#0f0f0f"
                            android:text="Address:" />
                        <TextView
                            android:id="@+id/addresDetailTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:textColor="#0f0f0f"
                            android:fontFamily="@font/nunito_semibold"
                            android:text="Address" />
                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:fontFamily="@font/nunito_semibold"
                            android:textStyle="bold"
                            android:textColor="#0f0f0f"
                            android:text="Description:" />
                        <TextView
                            android:id="@+id/priceDetailTextView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:padding="5dp"
                            android:maxLines="10"
                        android:ellipsize="end"
                        android:textColor="#0f0f0f"
                        android:fontFamily="@font/nunito_semibold"
                        android:text="Description" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="18dp"
                            android:padding="5dp"
                            android:maxLines="1"
                            android:fontFamily="@font/nunito_semibold"
                            android:textStyle="bold"
                            android:textColor="#0f0f0f"
                            android:text="Rate Us:" />
                        <ImageView
                            android:id="@+id/rateservice"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="30dp"
                            android:layout_gravity="center"
                            android:src="@drawable/rate"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/booking"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Send Request"/>







                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
