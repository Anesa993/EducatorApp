<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/icon"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:padding="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Number:"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender:"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tvgender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/qualification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qualification:"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tvQualification"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Qualification"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/subjecct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Subject:"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tvSubject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Subject"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/workimghour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Working Hours:"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tvWorkingHours"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Working Hours"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/areaa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area:"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tvArea"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Area"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/Typee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type:"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tvType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Type"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/tutorTypee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type:"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
            <TextView
                android:id="@+id/tutorType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tutor Type"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/spiner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tutor Type:"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="8dp" />
            <Spinner
                android:id="@+id/spinnerTutorType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"/>
        </LinearLayout>


        <EditText
            android:id="@+id/etQualification"
            android:layout_width="match_parent"
            android:background="@drawable/bg_txt"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_height="wrap_content"
            android:hint="Qualification" />

        <EditText
            android:id="@+id/etSubject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_txt"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Subject" />

        <EditText
            android:id="@+id/etWorkingHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_txt"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/nunito_semibold"
            android:hint="Working Hours" />

        <EditText
            android:id="@+id/etArea"
            android:background="@drawable/bg_txt"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Area" />

        <EditText
            android:id="@+id/etType"
            android:layout_width="match_parent"
            android:background="@drawable/bg_txt"
            android:padding="15dp"
            android:layout_margin="5dp"
            android:fontFamily="@font/nunito_semibold"
            android:layout_height="wrap_content"
            android:hint="Type" />

        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save" />


    </LinearLayout>


</ScrollView>
