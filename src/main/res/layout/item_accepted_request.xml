<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_margin="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="match_parent">

            <!-- Name Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name:"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textStyle="bold"
                    android:textColor="#3F51B5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Name"
                    android:id="@+id/nameac"
                    android:textSize="18sp"
                    android:padding="5dp"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textStyle="bold"
                    android:textColor="#3F51B5" />
            </LinearLayout>

            <!-- Mobile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile:"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="#3F51B5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Mobile"
                    android:id="@+id/mobileac"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Address Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address:"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="#3F51B5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address"
                    android:id="@+id/addresac"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Time Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time:"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="#3F51B5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:id="@+id/time"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Type Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type:"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="#3F51B5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:id="@+id/type"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="@color/black" />
            </LinearLayout>

            <!-- Tutor Name Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor Name:"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="#3F51B5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tutor Name"
                    android:id="@+id/tname"
                    android:textSize="16sp"
                    android:padding="5dp"
                    android:fontFamily="@font/nunito_semibold"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- Request and WhatsApp Section -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Request"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/nunito_semibold"
                android:textColor="@color/black"
                android:id="@+id/request"
                android:padding="8dp"/>
            <ImageView
                android:id="@+id/whatsapppp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/whatsapp"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
